<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>by.epam.java_training.mihail_poliansky.final_project.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>registration-login.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>SessionFilter</filter-name>
        <filter-class>by.epam.java_training.mihail_poliansky.final_project.controller.SessionFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SessionFilter</filter-name>
        <url-pattern>/controller/*</url-pattern>
    </filter-mapping>
</web-app>
